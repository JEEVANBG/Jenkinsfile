boolean stageResult  = true
pipeline {
    agent any
    stages {
        stage ('STAGE1') {
            steps {
                script {
                    try {
                        echo 'This is STAGE1 execution'
                        sh 'sleep 5'
                        sh 'exit 1'
                    }
                    catch(Exception e) {
                        echo 'STAGE1 is FAILED'
                        stageResult = false
                    }
                }
            }
        }
        stage ('STAGE2') {
            steps {
                script {
                    if (stageResult == true) {
                        echo 'STAGE1 is failed, hence STAGE 2 also failed'
                    }
                }
            }
        }
        stage ('STAGE3') {
            steps {
                script {
                    if (stageResult == false) {
                        echo 'STAGE1 is failed, hence execution of STAGE 3 successfull'
                    }
                }
            }
        }
    }
}
