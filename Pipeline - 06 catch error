pipeline {
    agent any

    stages {
        stage ('TEST1') {
            steps {
                sh 'sleep 5'
                echo 'test1 executed successfully'
            }
        }
        stage ('TEST2') {
            steps {
                catchError(buildresult: 'SUCCESS', stageResult: 'FAILURE')
                    sh 'sleep 5'
                    sh 'exit 1'
            }
        }
        stage ('TEST3') {
            steps {
                sh 'sleep 5'
            }
        }
    }
}
