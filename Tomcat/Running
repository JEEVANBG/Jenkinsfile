pipeline {
    agent any

    //Here we need to install maven in jenkins by going to tools section , where we give name as maven and maven-3.9.2 means version of maven , 
    //we can select other version also
    tools {
        maven 'maven-3.9.2'
    }

    stages {
        stage ('BUILD') {
            steps {
                echo 'Stage1 started'
                    sh 'cd ./Devops-ITD-May-2023/maven/simple-war/'
                    echo '1st run'
                    sh 'mvn clean package'
                    echo '2nd run'
                    sh 'cd ./target/'
                    echo '3rd run'
                    sh 'ls'
                    echo 'Build is done by maven and deploying is done tomcat'
                
            }
        }
    }
}
