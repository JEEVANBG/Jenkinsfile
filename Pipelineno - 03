pipeline {
    agent any
    environment {
        BUILD-STAGE = 'Deploy'
    }
    stages {
        stage ('BUILD') {
            agent { label 'master' }
            steps {
                sh 'sleep 5'
                echo "${env.BUILD-STAGE}"
            }
        }
        stage ('TEST') {
            agent { label 'slave-02' }
            steps {
                script {
                    env.BUILD-STAGE = 'BUILD'
                }
                sh 'sleep 5'
                echo "${env.BUILD-STAGE}"
            }
        }
        stage ('DEPLOY') {
            agent { label 'slave-02' }
            steps {
                sh 'sleep 5'
            }
        }
    }
}
